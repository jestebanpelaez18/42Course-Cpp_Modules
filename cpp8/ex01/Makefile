NAME = Span

SRC = main.cpp Span.cpp

OBJECT = $(SRC:.cpp=.o)
HEADER = Span.hpp\

FLAGS = -Wall -Wextra -Werror
CC = c++
INCLUDES = -Iincludes -I

all: $(NAME)

$(NAME): $(OBJECT) $(HEADER)
		$(CC) $(INCLUDES) $(FLAGS) $(OBJECT) -o $(NAME)

clean:
	rm -f $(OBJECT) 

fclean: clean
	   rm -f $(NAME)

re: fclean all

.PHONY: all re fclean clean